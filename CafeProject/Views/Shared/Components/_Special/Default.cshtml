 @model List<Menu>  
 <section class="section" id="offers">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 offset-lg-4 text-center">
                <div class="section-heading">
                    <h6>Haftanın</h6>
                    <h2>En Sevilen Lezzetleri</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="row" id="tabs">
                    <div class="col-lg-12">
                        
                    </div>
                    <div class="col-lg-12">
                        <section class='tabs-content'>
                            <article id='tabs-1'>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="row">
                                            <div class="left-list">
                                                @foreach (var item in Model)
                                                {
                                                    <div class="col-lg-12">
                                                        <div class="tab-item">
                                                            <img src="@item.İmageUrl" alt="">
                                                            <h4>@item.Name</h4>
                                                            <p>@item.Description</p>
                                                            <div class="price">
                                                                <h6>@item.Price ₺</h6>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            
                                            </div>
                                        </div>
                                    </div>
                                  @await Component.InvokeAsync("_SpecialRight")
                                </div>
                            </article>
                            
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>