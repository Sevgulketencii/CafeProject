
@model List<About>
<section class="section" id="about">

    <div class="container">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="left-text-content">
                        <div class="section-heading">
                            <h6>Hakkımızda</h6>
                            <h2>@item.Title</h2>
                        </div>
                        <p>@item.Description</p>
                        <div class="row">
                            <div class="col-4">
                                <img src="~/theme/assets/images/about-thumb-01.jpg" alt="">
                            </div>
                            <div class="col-4">
                                <img src="~/theme/assets/images/about-thumb-02.jpg" alt="">
                            </div>
                            <div class="col-4">
                                <img src="~/theme/assets/images/about-thumb-03.jpg" alt="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="right-content">
                        <div class="thumb">
                            <a rel="nofollow" href="http://youtube.com"><i class="fa fa-play"></i></a>
                            <img src="~/theme/assets/images/about-video-bg.jpg" alt="">
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</section>